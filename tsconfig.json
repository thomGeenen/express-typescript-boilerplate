{
    "compilerOptions": {
      "experimentalDecorators": true,
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": ".",
      "allowJs": true,
      "paths": {
        "*": ["node_modules/*"],
        "@/*": ["source/*"]
      }
    },
    "include": ["source/**/*.ts"],
    "exclude": [".vscode", "node_modules", "dist"]
  }